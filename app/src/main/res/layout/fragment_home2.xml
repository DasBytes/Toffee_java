<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rnd.Home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ViewFlipper
        android:layout_width="match_parent"
        android:id="@+id/viewflipper"
        android:background="@color/black"
        android:autoStart="true"
        android:flipInterval="2000"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/img_v1"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v2"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v3"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v4"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v5"
            android:layout_height="wrap_content">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v6"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v7"
            android:layout_height="wrap_content">
            
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v8"
            android:layout_height="wrap_content">



        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v11"
            android:layout_height="wrap_content">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/v10"
            android:layout_height="wrap_content">

        </ImageView>

    </ViewFlipper>

    <TextView
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="10dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#1F2543"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:text="Popular TV Channels"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_height="wrap_content">

    </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="View All>"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_height="wrap_content">

        </TextView>
</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:background="#1F2543"
    android:layout_height="10dp">

</TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle1"
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="10dp">

    </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Categories"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="View All>"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:layout_height="wrap_content">

    </TextView>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="10dp">

    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle2"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="10dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="TidBits"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="10dp">

    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle3"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#1F2543"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="#1F2543"
            android:layout_height="10dp">

        </TextView>

    <TextView
        android:layout_width="match_parent"
        android:text="Editor's choice"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>
        <TextView
            android:layout_width="match_parent"
            android:background="#1F2543"
            android:layout_height="10dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            android:backgroundTint="@color/black"
            app:cardMaxElevation="2dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textColorHighlight="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/name_widget"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content">

        </TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="10dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Trending channels"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="View All>"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="10dp">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle5"
        android:layout_width="match_parent"
        android:background="#1F2543"
        android:layout_height="wrap_content" />

</LinearLayout>
    </ScrollView>

</LinearLayout>